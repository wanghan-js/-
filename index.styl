// reset
body
ul
h1
h2
h3
p
  margin 0
  padding 0

li
  list-style none

html
body
  height 100%
  overflow hidden

#mask
  position absolute
  z-index 99
  background-size cover
  background-position -60px 0
  transition 1s opacity

.arrow
    position absolute
    width 70px
    height 35px
    bottom 35px
    left 50%
    margin-left -35px
    animation arrow-move 1.5s infinite

.music
  position absolute
  right 10px
  top 10px
  width 47px
  height 47px
  background url('image/music.png')
  background-size cover
  &.active
    animation music-rotate 1s infinite linear

.wrapper
  height 100%
  overflow hidden
  position relative
  font-family Arial, Helvetica, sans-serif
  .list
    & > li
      background-size cover
      background-position -60px 0
      background-repeat no-repeat
      // transition .5s
    .view1
      position relative
      background-image url('image/poster1.png')
      color #fff
      font-size 30px
      &.active
        .text
          p:nth-child(odd)
            animation right-show 1s
          p:nth-child(even)
            animation left-show 1s
      .text
        position absolute
        width 350px
        top 65%
        left 50%
        transform translateX(-50%)

    .view2
      background-image url('image/poster2.png')
      position relative
      &.active
        img
          animation icon-move 1s
      img
        position absolute
        &:nth-child(1)
          left 43%
          top 30%
        &:nth-child(2)
          left 13%
          top 40%
        &:nth-child(3)
          left 73%
          top 40%
        &:nth-child(4)
          left 13%
          top 65%
        &:nth-child(5)
          left 73%
          top 65%
        &:nth-child(6)
          left 43%
          top 75%
    .view3
      background-image url('image/poster3.png')
      position relative
      &.active
        img
          animation text-rotate 1s
      img
        position absolute
        left 50%
        transform translateX(-50%)
        top 60%
    .view4
      background-image url('image/poster4.png')
      position relative
      &.active
        p
          animation card-show 1s
      p
        position absolute
        color #fff
        font-size 22px
        border 1px solid #fff
        box-shadow 0 0 15px #fff
        border-radius 5px
        word-wrap break-word
        overflow hidden
        &:nth-child(1)
          width 220px
          height 240px
          left 4%
          top 15%
        &:nth-child(2)
          width 280px
          height 150px
          left 50%
          top 19%
        &:nth-child(3)
          width 110px
          height 280px
          left 78%
          top 40%
    .view5
      background-image url('image/poster5.png')


@keyframes music-rotate {
  to {
    transform rotate(360deg)
  }
}

@keyframes arrow-move {
  0% {
    opacity 0
    transform translateY(100%)
  }
  50% {
    opacity 1
    transform translateY(0)
  }
  100% {
    opacity 0
    transform translateY(-100%)
  }
}

@keyframes right-show {
  from {
    transform translateX(100%)
    opacity 0
  }
}
@keyframes left-show {
  from {
    transform translateX(-100%)
    opacity 0
  }
}

@keyframes icon-move {
  from {
    left 50%
    top 55%
    transform translate(-50%, -50%) rotate(720deg)
  }
}

@keyframes text-rotate {
  from {
    transform translateX(-50%) rotateY(720deg)
  }
  to {
    transform translateX(-50%) rotateY(0)
  }
}

@keyframes card-show {
  from {
    width 0
    height 0
  }
}